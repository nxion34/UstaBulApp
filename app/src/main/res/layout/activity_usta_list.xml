<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.h5190072.h5190072_MertcanOzyurtFinal.activities.UstaListActivity">

    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/imgKapak"
        android:layout_width="@dimen/layoutWidth410"
        android:layout_height="188dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/giriskapak" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvUstalar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layoutWidth0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgKapak"
        tools:layout_editor_absoluteX="125dp"
        tools:listitem="@layout/cardview_usta" />

</androidx.constraintlayout.widget.ConstraintLayout>